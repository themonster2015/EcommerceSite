<p id="notice"><%= notice %></p>

<h1>Products</h1>


<br>
<div class="container-fluid">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm-2 col-md-4">
        <h1><%= product.name %></h1>
        <!-- <p><%= image_tag("http://placekitten.com/200/300", class: "img-responsive") %></p> -->
       <!--  <%= link_to(image_tag("http://placekitten.com/200/300", :alt => "logo", :title => "Home"), "/") %> -->
       <%= image_tag 'http://placekitten.com/200/300' , class: "img-responsive" %>
        <p><%= product.description %></p>
        <p><%= number_to_currency(product.price) %></p>
        <p><%= link_to 'Show', product %></p>
        <p><%= link_to 'Edit', edit_product_path(product) %></p>
        <strong><%= product.color %></strong>
      </div><!-- /col -->
    <% end %>
  </div>
</div>

<%= link_to 'New Product', new_product_path %>