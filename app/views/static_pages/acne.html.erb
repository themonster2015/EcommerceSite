<div class="container-fluid">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm-2 col-md-3">
        <h1 class="title-details"><%= product.name %></h1>
        <!-- <p><%= image_tag("http://placekitten.com/200/300", class: "img-responsive") %></p> -->
       <!--  <%= link_to(image_tag("http://placekitten.com/200/300", :alt => "logo", :title => "Home"), "/") %> -->
       <%= image_tag(product.image_url, :class => "img-responsive img-rounded", :style => 'min-width:230px', :'data-zoom-image' => image_path(product.image_url), :id => 'image-zoom') %>
        <p><%= product.description %></p>
        <p><%= number_to_currency(product.price) %></p>
        <p><%= link_to 'Show', product %></p>
        <% if signed_in? %>
          <span class="btn btn-primary btn-colour-change" role="button"><%=  link_to  'Edit'  , edit_product_path(product)  %></span>
        <% end %>
        <!-- <p><%= link_to 'Edit', edit_product_path(product) %></p> -->
        <strong><%= product.color %></strong>
      </div><!-- /col -->
    <% end %>
  </div>
</div>

