<% cache product do %>
<div class="row">
<!--  <div class="col-sm-2 col-md-4">-->

  <% @products.each do |product| %>
    
    <div class="item<%= " active" if product == @products.first %>">
    <div class="carousel-caption">
      <h1><%= link_to product.name, product %></h1> </div>
      <img alt="Red city bike" src="https://pbs.twimg.com/profile_images/562466745340817408/_nIu8KHX.jpeg" />
      <p><%= product.description %></p>
      <strong>$ <%= product.price %></strong>
    <!-- </div>/col -->
    </div>
  <% end %>
  <% end %>
</div>